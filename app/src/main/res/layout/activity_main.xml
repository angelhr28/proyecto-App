<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.login.view.MainActivity">

    <com.google.android.material.button.MaterialButton
        style="@style/ButtonSignIn"
        android:id="@+id/btn_sign_up"
        android:layout_marginBottom="8dp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/colorBlue"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        style="@style/ButtonSignUp"
        android:id="@+id/btn_sign_in"
        android:layout_marginBottom="56dp"
        android:elevation="4dp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/container_indicators_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
        android:paddingBottom="50dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/slider_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_indicators_slider"/>


</androidx.constraintlayout.widget.ConstraintLayout>