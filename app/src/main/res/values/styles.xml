<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_light_blue</item>
    </style>
    
    <style name="ButtonCornerOutline" >
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:background">@drawable/btn_corner_outline</item>
    </style>

    <style name="ButtonCorner">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>

    <style name="TextViewTittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_lbl_ttl</item>
        <item name="android:textSize">@dimen/size_lbl_ttl</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="ViewSeparator">
        <item name="android:layout_width">@dimen/size_width_view_sptr</item>
        <item name="android:layout_height">@dimen/size_height_view_sptr</item>
        <item name="android:background">@drawable/view_corner</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:textColor">@color/color_text</item>
    </style>

</resources>