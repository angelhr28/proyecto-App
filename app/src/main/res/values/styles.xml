<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_light_blue</item>
    </style>
    
    <style name="ButtonCornerOutline" >
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:background">@drawable/btn_corner_outline</item>
    </style>

    <style name="ButtonCorner">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:background">@drawable/btn_corner</item>
    </style>

    <style name="ButtonCornerTotal">
        <item name="android:layout_width">@dimen/width_button_total</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:textSize">@dimen/font_size_button</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:background">@drawable/btn_corner_total</item>
    </style>


    <style name="TextViewTittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top_lbl_ttl</item>
        <item name="android:textSize">@dimen/size_lbl_ttl</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="ViewSeparator">
        <item name="android:layout_width">@dimen/size_width_view_sptr</item>
        <item name="android:layout_height">@dimen/size_height_view_sptr</item>
        <item name="android:background">@drawable/view_corner</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="styleIconsNavigation" >
        <item name="android:layout_width">@dimen/width_and_height_icons</item>
        <item name="android:layout_height">@dimen/width_and_height_icons</item>
        <item name="android:layout_marginTop">@dimen/margin_icons_navigation</item>
        <item name="android:layout_marginLeft">@dimen/margin_icons_navigation</item>
        <item name="android:background">@drawable/ripple_corner</item>
        <item name="android:tint">@color/color_black</item>
    </style>

    <style name="styleIconsOffColor" >
        <item name="android:layout_width">@dimen/width_and_height_icons</item>
        <item name="android:layout_height">@dimen/width_and_height_icons</item>
        <item name="android:layout_marginTop">@dimen/margin_icons_navigation</item>
        <item name="android:background">@drawable/ripple_corner</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
    </style>

    <style name="ContenInputEditext" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:importantForAutofill" tools:targetApi="o">noExcludeDescendants</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_input</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_input</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:typeface">@font/googlesans_regular</item>
        <item name="android:textColor">@color/color_black</item>
        <item name = "errorTextAppearance">@style/error_appearance</item>
    </style>

    <style name="CustomDialogBackground" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="textColorAlertDialogListItem">@color/color_black</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/background_shadow</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>