<animated-vector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    tools:targetApi="lollipop">
    <aapt:attr name="android:drawable">
        <vector
            android:name="anim_progress_bar"
            android:width="240dp"
            android:height="8dp"
            android:viewportWidth="240"
            android:viewportHeight="8">
            <path
                android:name="progress_bg"
                android:pathData="M 4 0 L 236 0 C 237.06 0 238.079 0.422 238.828 1.172 C 239.578 1.921 240 2.94 240 4 C 240 5.06 239.578 6.079 238.828 6.828 C 238.079 7.578 237.06 8 236 8 L 4 8 C 2.94 8 1.921 7.578 1.172 6.828 C 0.422 6.079 0 5.06 0 4 C 0 2.94 0.422 1.921 1.172 1.172 C 1.921 0.422 2.94 0 4 0"
                android:fillColor="#c4c4c4"
                android:strokeWidth="1"/>
            <group android:name="anim">
                <path
                    android:name="progress"
                    android:pathData="M 4 0 L 66 0 C 67.06 0 68.079 0.422 68.828 1.172 C 69.578 1.921 70 2.94 70 4 C 70 5.06 69.578 6.079 68.828 6.828 C 68.079 7.578 67.06 8 66 8 L 4 8 C 2.94 8 1.921 7.578 1.172 6.828 C 0.422 6.079 0 5.06 0 4 C 0 2.94 0.422 1.921 1.172 1.172 C 1.921 0.422 2.94 0 4 0"
                    android:fillColor="#3a71b1"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="anim">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="translateX"
                    android:duration="1000"
                    android:valueFrom="0"
                    android:valueTo="170"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="translateX"
                    android:startOffset="1000"
                    android:duration="1000"
                    android:valueFrom="170"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
