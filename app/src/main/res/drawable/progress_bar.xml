<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="lollipop">
    <aapt:attr name="android:drawable">
        <vector
            android:name="progress_bar"
            android:width="240dp"
            android:height="8dp"
            android:viewportWidth="240"
            android:viewportHeight="8">
            <path
                android:name="progress_background"
                android:fillColor="#66FFFFFF"
                android:pathData="M 4 0 L 236 0 C 237.06 0 238.079 0.422 238.828 1.172 C 239.578 1.921 240 2.94 240 4 C 240 5.06 239.578 6.079 238.828 6.828 C 238.079 7.578 237.06 8 236 8 L 4 8 C 2.94 8 1.921 7.578 1.172 6.828 C 0.422 6.079 0 5.06 0 4 C 0 2.94 0.422 1.921 1.172 1.172 C 1.921 0.422 2.94 0 4 0"
                android:strokeWidth="1" />
            <group android:name="first_move">
                <path
                    android:name="progress"
                    android:fillColor="#000000"
                    android:pathData="M 4 0 L 46 0 C 47.06 0 48.079 0.422 48.828 1.172 C 49.578 1.921 50 2.94 50 4 C 50 5.06 49.578 6.079 48.828 6.828 C 48.079 7.578 47.06 8 46 8 L 4 8 C 2.94 8 1.921 7.578 1.172 6.828 C 0.422 6.079 0 5.06 0 4 C 0 2.94 0.422 1.921 1.172 1.172 C 1.921 0.422 2.94 0 4 0"
                    android:strokeWidth="1" />
            </group>
            <group android:name="second_move">
                <path
                    android:name="second_progress"
                    android:fillColor="#000000"
                    android:pathData="M 4 0 L 46 0 C 47.06 0 48.079 0.422 48.828 1.172 C 49.578 1.921 50 2.94 50 4 C 50 5.06 49.578 6.079 48.828 6.828 C 48.079 7.578 47.06 8 46 8 L 4 8 C 2.94 8 1.921 7.578 1.172 6.828 C 0.422 6.079 0 5.06 0 4 C 0 2.94 0.422 1.921 1.172 1.172 C 1.921 0.422 2.94 0 4 0" />
            </group>
        </vector>
    </aapt:attr>
    <target android:name="first_move">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:interpolator="@android:anim/linear_interpolator"
                android:propertyName="translateX"
                android:valueFrom="0"
                android:valueTo="290"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="second_move">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:interpolator="@android:anim/linear_interpolator"
                android:propertyName="translateX"
                android:valueFrom="-190"
                android:valueTo="0"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
</animated-vector>

